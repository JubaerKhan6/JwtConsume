@model JwtConsume.Models.User;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



<div class="row">
    
    <div class="col-md-4 text-light loginbox glasseffect">
        <img src="~/lib/Images/BingeCircle.png" asp-append-version="true" />
        <h2 style="color:yellow">Login</h2>
        <p style="color: red"> @TempData["Message"] </p>
        <form asp-action="LoginUser" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"> UserID</label>
                <input asp-for="Id" class="form-control"  />
                <span asp-validation-for="Id" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"> Password</label>
                <input type="password" asp-for="Password" class="form-control"  />
                <span asp-validation-for="Password" class="text-danger"> </span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <br />
            <div class="form-group">
                <a asp-controller="Home" asp-action="Register" class="btn btn-outline-primary"> Sign up </a>
            </div>

        </form>
    </div>
</div>