@model JwtConsume.Models.User;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div>
            <p style="color: red"> @TempData["Message"] </p>
    </div>
    <div class="col-md-4">
        <form asp-action="LoginUser" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"> UserID</label>
                <input asp-for="Id" class="form-control"  />
                <span asp-validation-for="Id" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"> Password</label>
                <input asp-for="Password" class="form-control"  />
                <span asp-validation-for="Password" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <br />
            <div class="form-group">
                <a asp-controller="Home" asp-action="Register" class="btn btn-outline-primary"> Sign up </a>
            </div>

        </form>
    </div>
</div>