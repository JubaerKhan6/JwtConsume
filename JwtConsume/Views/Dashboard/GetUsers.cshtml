@model IEnumerable<JwtConsume.Models.UserInfo>

@{
    ViewData["Title"] = "GetUsers";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<h1 class="text-light" >Users</h1>

<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Role)
            </td>
           
            
            <td>
                <a asp-controller="Dashboard" asp-action="Edit" asp-route-id=@item.UserId style="color: blue">Edit</a>
                    <a asp-controller="Dashboard" asp-action="Delete" style="color: red" onclick="Are you Sure you want to delete this user?" asp-route-id=@item.UserId>Delete</a>
            </td>
        </tr>
}
        
    </tbody>
</table>

<a asp-controller="Store" asp-action="Index" class="btn btn-danger">Back</a>
